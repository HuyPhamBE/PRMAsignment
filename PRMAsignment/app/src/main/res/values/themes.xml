<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PRMAsignment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PRMAsignment" parent="Base.Theme.PRMAsignment" />
    <style name="ShapeAppearanceOverlay.NavItemSelected" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="AdminNavStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemVerticalPadding">12dp</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemIconPadding">12dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearance">@style/TextAppearance.NavItem</item>
    </style>

    <style name="TextAppearance.NavItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="DetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DetailIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:tint">@color/petshop_primary</item>
    </style>

    <style name="DetailLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


</resources>