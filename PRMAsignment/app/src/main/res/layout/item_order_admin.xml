<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 🆔 Order ID -->
        <TextView
            android:id="@+id/textOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order #1234"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <!-- 👤 User Info -->
        <TextView
            android:id="@+id/textUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- 💳 Payment Status -->
        <TextView
            android:id="@+id/textPaymentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment: Paid"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- 💰 Total -->
        <TextView
            android:id="@+id/textTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $199.99"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- 🕒 Date -->
        <TextView
            android:id="@+id/textOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2024-07-15"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- 👁️ View Details Button -->
        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/petshop_primary"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_gravity="end"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
